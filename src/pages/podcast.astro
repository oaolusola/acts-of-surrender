---
import Layout from "../layouts/Layout.astro";

const PLAYLIST_ID = "PLYHVtvuJ0rfffq4x--YMoODZ-ooU42Oxm";
---

<Layout title="Podcast | Caves, Whales, and Callings">
  <h1>Podcast</h1>
  <p class="lede">
    Read-aloud essays with occasional commentary on the ideas behind them.
  </p>

  <div class="video">
    <iframe
      width="100%"
      height="520"
      src={`https://www.youtube.com/embed/videoseries?list=${PLAYLIST_ID}`}
      title="Caves, Whales, and Callings Podcast"
      frameborder="0"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
      allowfullscreen
      loading="lazy"
    ></iframe>
  </div>

  <p class="small" style="margin-top: .85rem;">
    <a
      href="https://www.youtube.com/playlist?list=PLYHVtvuJ0rfffq4x--YMoODZ-ooU42Oxm"
      target="_blank"
      rel="noopener noreferrer"
    >
      Open the playlist on YouTube
    </a>
  </p>
</Layout>
